#!/usr/bin/env node

'use strict';

const debug_app = require('debug')('IRCotti');
const app = require('../app');

/* Set port */
app.set('port', process.env.PORT || 8888);

/* Listen */
const server = app.listen(app.get('port'), function() {
  debug_app("Express server listening on port " + server.address().port);
});

/* Socket server */
// require('../socket-server')(server);
